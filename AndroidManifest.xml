<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.klusman.java2"
    android:versionCode="1"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" tools:ignore="OldTargetApi"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
<!--  MAIN ACTIVITY -->
        <activity
            android:name="com.klusman.java2.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
 <!--  DETAIL ACTIVITY -->
        <activity 
            android:name="com.klusman.java2.ForecastDetails"
            >
            
        </activity>
<!--  NEW FORECAST ACTIVITY -->
        <activity 
            android:name=".NewForecast"
        >
        </activity>
          
<!--  ZIP CODE ACTIVITY -->
        <activity 
            android:name=".ZipSet"
        >
        </activity>
        
        
    </application>

</manifest>